#!/usr/bin/python
#author Sebastian Znaj
print("Please enter a number\n(or letter to quit.)")


while True:
    try:
        nr1 = int(input("Enter first number: "))
        opr = ("+", "-", "*", "/")
        opr = str(input("Enter operator +, -, *, /: "))
        nr2 = int(input("Enter secand number: "))

        if opr=="+":
            print("Resoult:",(nr1+nr2),"\n")
        elif opr=="-":
            print("Resoult:",(nr1-nr2),"\n")
        elif opr=="*":
            print("Resoult:",(nr1*nr2),"\n")
        elif opr=="/":
            print("Resoult:",(nr1//nr2),"\n")
    except:
        print("It's a letter.\nGoodbye.\n")
        break
